# Maintainer: Shane <shane@example.com>
pkgname=git-sqlite-filter
pkgver=0.1.0
pkgrel=1
pkgdesc="A clean/smudge git filter for SQLite databases with noise reduction"
arch=('any')
url="https://github.com/gamesguru/git-sqlite-filter"
license=('MIT')
depends=('python')
source=("https://github.com/gamesguru/git-sqlite-filter/archive/v${pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
    cd "$pkgname-$pkgver"

    # Install scripts directly
    install -Dm755 src/git_sqlite_filter/clean.py "$pkgdir/usr/bin/git-sqlite-clean"
    install -Dm755 src/git_sqlite_filter/smudge.py "$pkgdir/usr/bin/git-sqlite-smudge"

    # Docs and License
    install -Dm644 README.rst "$pkgdir/usr/share/doc/$pkgname/README.rst"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

    # Man pages
    install -Dm644 man/git-sqlite-clean.1 "$pkgdir/usr/share/man/man1/git-sqlite-clean.1"
    install -Dm644 man/git-sqlite-smudge.1 "$pkgdir/usr/share/man/man1/git-sqlite-smudge.1"
    install -Dm644 man/git-sqlite.1 "$pkgdir/usr/share/man/man1/git-sqlite.1"
}
